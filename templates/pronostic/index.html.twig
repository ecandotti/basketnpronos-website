{% extends 'base.html.twig' %}

{% block title %}Pronostic index{% endblock %}

{% block body %}
    <h1>Pronostic index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>CreateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pronostic in pronostics %}
            <tr>
                <td>{{ pronostic.id }}</td>
                <td>{{ pronostic.title }}</td>
                <td>{{ pronostic.createAt ? pronostic.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('pronostic_show', {'id': pronostic.id}) }}">show</a>
                    <a href="{{ path('pronostic_edit', {'id': pronostic.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pronostic_new') }}">Create new</a>
{% endblock %}
