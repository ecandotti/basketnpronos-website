{% extends 'base.html.twig' %}

{% block title %}Pronostiques du jour | BasketNPronos{% endblock %}

{% block body %}
    <h3 class="text-center my-2 text-warning "><i class="fas fa-star"></i> Pronostiques du jour <i class="fas fa-star"></i></h3>

    <section>
        {% if app.user and not is_granted('ROLE_ADMIN') %}
            <div class="text-center">Vous Ãªtes V.I.P jusqu'au <b>{{ dateVIP|date('d-m-Y') }}</b></div>
        {% endif %}
        <div class="d-flex flex-column">
        {% for prono in currentProno %}
            <div class="card my-4">
                <div class="card-body">
                    <h2 class="card-title text-center"><u>{{ prono.title }}</u></h2>
                </div>

                <div class="card-body">
                    {{ prono.content|raw }}
                </div>
                <ul class="list-group list-group-flush">
                    {% if prono.category == "F" %}
                        <span class="badge badge-success">Fiable</span>
                    {% else %}
                        <span class="badge badge-info">Fun</span>
                    {% endif %}
                </ul>
                <div class="card-footer text-muted">
                    Le {{ prono.createAt|date('d-m-Y') }} par <b>{{ prono.user.pseudo}}</b>.
                </div>
            </div>
        {% endfor %}
        {% if not currentProno %}
            <div class="text-center my-4 border p-4 text-muted">
                Les pronostiques du jour ne sont pas encore sorties !
            </div>
        {% endif %}
    </section>
{% endblock %}
